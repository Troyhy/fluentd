<match docker.all>
  type elasticsearch
  host {{ .Env.ES_HOST }}
  port {{ .Env.ES_PORT }}
  index_name docker
  type_name all
  logstash_format true
</match>

<match docker.filtered.**>
  type elasticsearch
  host {{ .Env.ES_HOST }}
  port {{ .Env.ES_PORT }}
  index_name docker
  type_name fluentd
  logstash_format true
</match>
